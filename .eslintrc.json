{
  "env": {
    "node": true,
    "es2021": true,
    "browser": false
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn", { "args": "none" }],
    "no-console": "off",
    "no-undef": "off",
    "prefer-const": "warn",
    "arrow-spacing": "error",
    "comma-dangle": ["error", "always-multiline"],
    "comma-spacing": "error",
    "eqeqeq": ["error", "always"],
    "key-spacing": "error",
    "keyword-spacing": "error",
    "no-multiple-empty-lines": ["error", { "max": 2 }],
    "no-trailing-spaces": "error",
    "object-curly-spacing": ["error", "always"],
    "space-before-blocks": "error",
    "space-before-function-paren": ["error", "never"],
    "space-in-parens": ["error", "never"],
    "space-infix-ops": "error"
  },
  "globals": {
    "api_response": "readonly",
    "message": "writable",
    "resources": "writable",
    "quick_replies": "writable",
    "formatted_resources": "writable",
    "intent": "writable",
    "results_count": "writable",
    "user_input": "readonly",
    "detected_intent": "writable",
    "should_use_emergency_api": "writable",
    "category": "writable"
  }
}