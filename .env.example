# Qdrant Vector Database Configuration
QDRANT_HOST=localhost  # Use 'qdrant.railway.internal' for Railway deployment
QDRANT_PORT=6333
QDRANT_API_KEY=  # Optional for local, required for Qdrant Cloud

# API Security Configuration
ENABLE_AUTH=false  # Set to 'true' in production
API_KEY=your_secret_key_here  # Generate a secure 32-character key for production

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Embeddings Configuration
USE_LOCAL_EMBEDDINGS=true  # Set to 'true' to use free local embeddings
OPENAI_API_KEY=  # Optional: Only if USE_LOCAL_EMBEDDINGS=false
